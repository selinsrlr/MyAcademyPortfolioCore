
@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h3>Kategoriler</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="#" class="btn btn-outline-danger">Sil</a>
                <a href="#" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }

</table>

<a href="#" class="btn btn-outline-primary">Yeni Kategori Oluştur</a>